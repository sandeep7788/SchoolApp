                                        android:padding="5dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">


                                            <TextView
                                                    android:fontFamily="@font/intel"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="8dp"
                                                android:layout_weight="0.5"
                                                android:text="Your Country"
                                                android:textColor="#000000"
                                                android:textStyle="bold" />

                                            <ImageView
                                                android:id="@+id/i_number"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_marginRight="10dp"
                                                android:src="@drawable/ic_edit_black_24dp"
                                                tools:ignore="VectorDrawableCompat" />


                                        </LinearLayout>



                &lt;!&ndash;
                                        <com.hbb20.CountryCodePicker
                                            android:id="@+id/cp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:outlineSpotShadowColor="#a0ffffff"/>
                &ndash;&gt;

                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                -->

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="9dp"
                    android:layout_marginBottom="5dp"
                    app:cardBackgroundColor="#ffffff"
                    app:cardCornerRadius="9dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/intel"
                                android:text="Address"
                                android:textColor="@color/app"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/i_state"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/ic_edit_black_24dp"
                                android:tint="@color/app"
                                tools:ignore="VectorDrawableCompat" />

                        </LinearLayout>

                        <EditText
                            android:id="@+id/e_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:background="@null"
                            android:focusableInTouchMode="false"
                            android:fontFamily="@font/intel"
                            android:hint="Address"
                            android:maxLines="3"
                            android:padding="5dp"
                            android:textColor="#000000"
                            android:textColorHint="@color/tb"
                            android:textSize="14dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="9dp"
                    android:layout_marginBottom="5dp"
                    app:cardBackgroundColor="#ffffff"
                    app:cardCornerRadius="9dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/intel"
                                android:text="Mobile Number"
                                android:textColor="@color/app"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/i_city"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="10dp"
                                android:foregroundTint="#a0dcc09a"
                                android:src="@drawable/ic_edit_black_24dp"
                                android:tint="#f2f4f5"
                                tools:ignore="VectorDrawableCompat" />


                        </LinearLayout>

                        <EditText
                            android:id="@+id/e_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:background="@null"
                            android:focusableInTouchMode="false"
                            android:focusedByDefault="true"
                            android:fontFamily="@font/intel"
                            android:hint="Number"
                            android:inputType="number"
                            android:maxLines="3"
                            android:padding="5dp"
                            android:textColor="#000000"
                            android:textColorHint="@color/tb"
                            android:textSize="14dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <Button
                android:id="@+id/btn_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="9dp"
                android:background="@drawable/backgrounimage"
                android:fontFamily="@font/intel"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Update"
                android:textColor="@color/app" />


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
