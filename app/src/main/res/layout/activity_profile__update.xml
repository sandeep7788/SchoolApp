    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profilepiclayout"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:layout_marginTop="9dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageview"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:backgroundTint="#ffffff"
                    android:foregroundGravity="center"
                    android:foregroundTint="#ffffff"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_sync_black_24dp"
                    android:tint="#ffffff"
                    app:civ_border_color="#ffffff"
                    app:civ_circle_background_color="#ffffff"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/p_edit"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignTop="@+id/imageview"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/ic_edit_black_24dp"
                    android:tint="@color/app"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <!--<TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cardiologist"
            android:gravity="center"
            android:textSize="10sp"/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:orientation="vertical"
                android:padding="10dp"
                android:paddingBottom="9dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="9dp"
                    android:layout_marginBottom="5dp"
                    app:cardBackgroundColor="#ffffff"
                    app:cardCornerRadius="9dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/intel"
                                android:text="Name"
                                android:textColor="@color/app"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/i_name"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="10dp"
                                android:foregroundTint="@color/tw"
                                android:src="@drawable/ic_edit_black_24dp"
                                android:tint="#f2f4f5"
                                tools:ignore="VectorDrawableCompat" />


                        </LinearLayout>

                        <EditText
                            android:id="@+id/e_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:background="@android:color/white"
                            android:focusableInTouchMode="false"
                            android:fontFamily="@font/intel"
                            android:hint="Name"
                            android:maxLines="3"
                            android:padding="5dp"
                            android:textColor="#000000"
                            android:textColorHint="@color/tb"
                            android:textSize="14dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="9dp"
                    android:layout_marginBottom="5dp"
                    app:cardBackgroundColor="#ffffff"
                    app:cardCornerRadius="9dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/intel"
                                android:text="Email"
                                android:textColor="@color/app"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/i_about"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="10dp"
                                android:foregroundTint="@color/tw"
                                android:src="@drawable/ic_edit_black_24dp"
                                android:tint="#f2f4f5"
                                tools:ignore="VectorDrawableCompat" />


                        </LinearLayout>


                        <EditText
                            android:id="@+id/e_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:background="@null"
                            android:focusableInTouchMode="false"
                            android:fontFamily="@font/intel"
                            android:hint="Email id"
                            android:maxLines="3"
                            android:padding="5dp"
                            android:textColor="#000000"
                            android:textColorHint="@color/tb"
                            android:textSize="14dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--
                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginBottom="5dp"
                                    app:cardBackgroundColor="#ffffff" app:cardCornerRadius="9dp"
                                    app:cardElevation="9dp"
                                    android:outlineSpotShadowColor="@android:color/white"
                                    android:outlineAmbientShadowColor="@android:color/white">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
