<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="0.5dp"
    android:background="@drawable/round_shape_att"
    android:elevation="4dp"
    android:minHeight="50dp"
    android:orientation="horizontal"
    android:weightSum="2">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="340dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/c_homework"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:minWidth="250dp"
            app:cardBackgroundColor="#f5f4f9"
            app:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/t_date"
                style="@style/TextAppearance.Compat.Notification.Time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/intel"
                android:gravity="center"
                android:inputType="datetime"
                android:minWidth="150dp"
                android:text="00:00:00"
                android:textColor="#151528"
                android:textSize="24dp" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/t_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:background="@drawable/corner_shape_att"
            android:backgroundTint="@color/red_btn_bg_color"
            android:fontFamily="@font/intel"
            android:foregroundGravity="center"
            android:gravity="center"
            android:minWidth="200dp"
            android:padding="9dp"
            android:text="Persent"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>